{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#bb9af7",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "Shell",
              "powershell": "Shell",
              "cmd": "Cmd",
              "bash": "Bash"
            }
          },
          "template": "   {{ .Name }} "
        },
        {
          "foreground": "#c0caf5",
          "properties": {
            "style": "folder"
          },
          "style": "plain",
          "template": "  {{ .Path }}",
          "type": "path"
        },
        {
          "foreground": "#2ac3de",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9e64{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f7768e{{ end }}",
            "{{ if gt .Ahead 0 }}#bb9af7{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "properties": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{ .UpstreamIcon }} {{ .HEAD }}   ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "overflow": "hide",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "fetch_user": true
          },
          "template": " {{.User.Email}} ",
          "foreground": "#c0caf5",
          "type": "git",
          "style": "plain"
        },
        {
          "properties": {
            "fetch_version": true,
            "cache_duration": "none",
            "fetch_package_manager": true
          },
          "type": "node",
          "style": "plain",
          "foreground": "#9ece6a",
          "template": "  {{ .Full }} {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }}{{ end }}"
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#b8ff75",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E06C75{{ end }}"
          ],
          "template": " x{{ reason .Code }}"
        },
        {
          "foreground": "#b8ff75",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E06C75{{ end }}"
          ],
          "properties": {
            "style": "roundrock",
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#E06C75",
          "style": "plain",
          "template": "!",
          "type": "root"
        },
        {
          "foreground": "#73daca",
          "style": "plain",
          "template": "❯",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}
